<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.floreantpos.model">
	<class lazy="false" name="com.floreantpos.model.MenuCategory"
		table="MENU_CATEGORY">
		<id column="ID" name="id" type="java.lang.Integer">
			<generator class="identity" />
		</id>

		<property column="NAME" length="120" name="name" not-null="true"
			type="java.lang.String" />
		<property column="TRANSLATED_NAME" length="120" name="translatedName"
			not-null="false" type="java.lang.String" />

		<!-- <property name="image" type="java.sql.Blob" column="IMAGE" length="1048576" 
			/> -->
		<property column="VISIBLE" index="food_category_visible"
			name="visible" type="java.lang.Boolean" />
		<property column="BEVERAGE" name="beverage" type="java.lang.Boolean" />
		<property column="SORT_ORDER" name="sortOrder" type="java.lang.Integer" />
		<property column="BTN_COLOR" name="buttonColorCode" type="java.lang.Integer" />
		<property column="TEXT_COLOR" name="textColorCode" type="java.lang.Integer" />
		
		<bag cascade="none" inverse="true" lazy="false" name="discounts"
			table="MENUCATEGORY_DISCOUNT">
			<key column="MENUCATEGORY_ID" />
			<many-to-many class="Discount" column="DISCOUNT_ID" />
		</bag>
		
		<!-- Associations -->
		<bag cascade="none" inverse="true" lazy="false" name="menuGroups">
			<key column="CATEGORY_ID" />
			<one-to-many class="MenuGroup" />
		</bag>
	</class>
</hibernate-mapping>

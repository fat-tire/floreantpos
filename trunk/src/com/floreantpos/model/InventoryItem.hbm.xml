<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping package="com.floreantpos.model">
    <class lazy="false" name="com.floreantpos.model.InventoryItem" 
           table="INVENTORY_ITEM">
        <id column="ID" name="id" type="java.lang.Integer">
            <generator class="identity"/>
        </id>
        
        
        <property column="CREATE_TIME" name="createTime" type="java.sql.Timestamp"/>
        <property column="LAST_UPDATE_DATE" name="lastUpdateDate" type="java.util.Date"/>

        <property column="NAME" length="60" name="name" type="java.lang.String"/>
        <property column="PACKAGE_BARCODE" length="30" name="packageBarcode" type="java.lang.String"/>
        <property column="UNIT_BARCODE" length="30" name="unitBarcode" type="java.lang.String"/>
        <property column="UNIT_PER_PACKAGE" name="unitPerPackage" type="java.lang.Double"/>
        <property column="SORT_ORDER" name="sortOrder" type="java.lang.Integer"/>
        <property column="PACKAGE_REORDER_LEVEL" name="packageReorderLevel" type="java.lang.Integer"/>
        <property column="PACKAGE_REPLENISH_LEVEL" name="packageReplenishLevel" type="java.lang.Integer"/>
        <property column="DESCRIPTION" name="description" type="java.lang.String"/>
        <property column="AVERAGE_PACKAGE_PRICE" name="averagePackagePrice" type="java.lang.Double"/>
        
        <property column="TOTAL_PACKAGES" name="totalPackages" type="java.lang.Integer"/>
        <property column="TOTAL_RECEPIE_UNITS" name="totalRecepieUnits" type="java.lang.Double"/>
       
        <property column="UNIT_PURCHASE_PRICE" name="unitPurchasePrice" type="java.lang.Double"/>
        <property column="UNIT_SELLING_PRICE" name="unitSellingPrice" type="java.lang.Double"/>
        <property column="VISIBLE" name="visible" type="java.lang.Boolean"/>
        
        <many-to-one class="com.floreantpos.model.PackagingUnit" name="packagingUnit">
            <column name="PUNIT_ID"/>
        </many-to-one>

        <many-to-one class="InventoryGroup" name="itemGroup">
            <column name="ITEM_GROUP_ID"/>
        </many-to-one>
        <many-to-one class="InventoryLocation" name="itemLocation">
            <column name="ITEM_LOCATION_ID"/>
        </many-to-one>
        <many-to-one class="InventoryVendor" name="itemVendor">
            <column name="ITEM_VENDOR_ID"/>
        </many-to-one>

    </class>
</hibernate-mapping>
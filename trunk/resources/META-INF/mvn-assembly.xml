<assembly>
	<id>bin</id>
	<includeBaseDirectory>true</includeBaseDirectory>
	<baseDirectory>${project.build.finalName}</baseDirectory>
	<formats>
		<format>dir</format>
	</formats>

	<dependencySets>
		<dependencySet>
			<outputDirectory>lib</outputDirectory>
			<unpack>false</unpack>
		</dependencySet>
		<dependencySet>
			<outputDirectory>database/derby-server/lib</outputDirectory>
			<unpack>false</unpack>
			<includes>
				<include>org.apache.derby:derby</include>
				<include>org.apache.derby:derbynet</include>
			</includes>
			<outputFileNameMapping>${artifact.artifactId}.${artifact.extension}</outputFileNameMapping>
		</dependencySet>
	</dependencySets>

	<fileSets>
		<!--  Adds startup scripts to the root directory of zip package -->
		<fileSet>
			<directory>${project.basedir}</directory>
			<outputDirectory></outputDirectory>
			<filtered>false</filtered>
			<includes>
				<include>CHANGES</include>
				<include>drawer-kick.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>etc</directory>
			<outputDirectory></outputDirectory>
			<filtered>true</filtered>
			<includes>
				<include>floreantpos.bat</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>database/derby-server</directory>
			<outputDirectory>database/derby-server</outputDirectory>
			<includes>
				<include>*.bat</include>
				<include>*.sh</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>database/derby-single</outputDirectory>
			<includes>
				<include>posdb/**/*</include>
			</includes>
		</fileSet>
		<fileSet>
			<directory>${project.build.directory}</directory>
			<outputDirectory>database/derby-server</outputDirectory>
			<includes>
				<include>posdb/**/*</include>
			</includes>
		</fileSet>
		<!-- adds jar package to the root directory of zip package -->
		<fileSet>
			<directory>target</directory>
			<outputDirectory></outputDirectory>
			<includes>
				<include>*.jar</include>
			</includes>
		</fileSet>
		
		<fileSet>
			<directory>i18n</directory>
			<outputDirectory>i18n</outputDirectory>
			<includes>
				<include>*.properties</include>
			</includes>
		</fileSet>
		
		<fileSet>
			<directory>config</directory>
			<outputDirectory>config</outputDirectory>
			<includes>
				<include>**/*</include>
			</includes>
		</fileSet>
	</fileSets>
</assembly>